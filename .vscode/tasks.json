{
	// See https://go.microsoft.com/fwlink/?LinkId=733558 
	// for the documentation about the tasks.json format
	"version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-g",
                "-Wall",
                "-O2",
                "${file}",
                "-o",
                "${fileDirname}/../objs/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },{
            "type": "shell",
            "label": "g++ build active file [No Optimize]",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-g",
                "-Wall",
                "-O0",
                "${file}",
                "-o",
                "${fileDirname}/../objs/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }, {
			"type": "shell",
			"label": "cl.exe build active file",
			"command": "cl.exe",
			"args": [
				"/W4",
				"/Zi",
				"/EHsc",
				"/Fe:",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				"${file}"
			],
			"problemMatcher": {
                "owner": "cpp",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.*)\\((\\d+)\\)\\s*:\\s*(warning|error).+:\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            }
		}
    ],
}