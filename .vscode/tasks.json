{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-g",
                "-Wall",
                "-O2",
                "${file}",
                "-o",
                "${fileDirname}/../objs/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "autoDetect"
            },
        },
        {
            "type": "shell",
            "label": "g++ build active file [No Optimize]",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-g",
                "-Wall",
                "-O0",
                "${file}",
                "-o",
                "${fileDirname}/../objs/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "autoDetect"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/W4",
                "/Zi",
                "/EHsc",
                "/Fe:",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": "autoDetect",
                "pattern": {
                    "regexp": "^(.*)\\((\\d+)\\)\\s*:\\s*(warning|error).+:\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            }
        }
    ],
}